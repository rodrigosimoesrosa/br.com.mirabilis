<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="#002233" />

            <corners android:topLeftRadius="7dp" android:topRightRadius="7dp" />

            <solid android:color="#00AADD" />
        </shape>
	</item>
    
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="#002233" />

            <corners android:topLeftRadius="7dp" android:topRightRadius="7dp" />

            <solid android:color="#00AADD" />
        </shape>
	</item>
	
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="#002233" />

            <corners android:topLeftRadius="7dp" android:topRightRadius="7dp" />

            <solid android:color="#555555" />
        </shape>
	</item>
	
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="#002233" />

            <corners android:topLeftRadius="7dp" android:topRightRadius="7dp" />

            <gradient android:angle="90" android:centerColor="#dddddd" android:centerY="0.8" android:endColor="#cccccc" android:startColor="#eeeeee" android:type="linear" />
        </shape>
	</item>

</selector>